@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<form method="post" enctype="multipart/form-data">

    <p>Value from db : @Model.ValueFromDb</p>
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" asp-page-handler="UploadFiles" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <p>@Model.Message</p>
        </div>
    </div>
</form>
